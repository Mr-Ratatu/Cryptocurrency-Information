<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTransparentBottomSheetDialogTheme" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="DialogText" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:fontFamily">@font/red_hat_display_regular</item>
    </style>

    <style name="ChipTimeSpanStyle" parent="Widget.MaterialComponents.Chip.Filter" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_text_chip</item>
        <item name="checkedIcon">@null</item>
        <item name="chipBackgroundColor">@color/color_background_chip</item>
    </style>

</resources>